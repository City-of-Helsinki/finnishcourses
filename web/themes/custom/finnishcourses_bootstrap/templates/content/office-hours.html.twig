<div class="office-hours">
  {% for item in items %}
  


    {% set aria = "undefined" %}
	
	{% if item.classes == 'office-hours__item empty' %}
		{% set aria = "true" %}
    {% endif %}
	

  
    <div class="{{ item.classes }}" aria-hidden="{{ aria }}">
	  <span class="sr-only">{{ item.label }} {{ item.slots }}</span>	
      <span aria-hidden="true" class="office-hours__item-label" style="width: {{ label_length * 0.60 }}em;">{{ item.label }}</span>
      <span aria-hidden="true" class="office-hours__item-slots"> {{ item.slots }}</span>
     <!-- <span class="office-hours__item-comments">{{ item.comments }}</span>
      <br /> -->
    </div>
  {% endfor %}
  {% if schema %}
    {% for meta in schema %}
      <meta property="openingHours" content="{{ meta.label }}{{ meta.slots }}">
    {% endfor %}
  {% endif %}
</div>
